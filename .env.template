# FastAPI Application Configuration

# API Settings
API_V1_STR=/api/v1
BASE_URL=http://localhost:8000
APP_PORT=8000

# Project Metadata
PROJECT_NAME="My FastAPI Project"
PROJECT_DESCRIPTION="Description of my FastAPI project."
PROJECT_VERSION="0.1.0"

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres # Service name in docker-compose
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres

# Redis Cache & Message Broker
REDIS_HOST=redis # Service name in docker-compose
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
# Generate a strong secret key, e.g., using: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here 
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# Email Settings (for Celery tasks, etc.)
EMAIL_PASSWORD=your_email_password
EMAIL=your_email@example.com
SMTP_PORT=587
SMTP_SERVER=smtp.example.com

